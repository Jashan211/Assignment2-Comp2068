<!--
  Shared Header for all view pages
-->
<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/semantic.css' />
    <link rel='stylesheet' href='/stylesheets/semantic.min.css' />
  </head>
  <!-- navbar styling using semantic ui css template-->
  <div class="ui inverted pointing menu" >
    <a class="<%= isActive === 'home' ? 'active item' : 'item' %>" href="/">
      Tour Guide
    </a>
    <a class="<%= isActive === 'places' ? 'active item' : 'item' %>" href="/places">
      Tourist Places
    </a>
    <div class="right menu">
      <!-- Check is there is no user signe in to show register and login link-->
      <% if (!user) { %>
      <a class="<%= isActive === 'register' ? 'active item' : 'item' %>" href="/register">
        Register
      </a>
      <a class="<%= isActive === 'login' ? 'active item' : 'item' %>" href="/login">
        Login
      </a>
      <% } %>
      <!--If there is user signed in it will show logout link-->
      <% if (user) { %>
        <a class="item" href="/logout">Logout</a>
      <% } %>
    </div>
  </div>
  <body style="background-color: darkgray">
    <div class="ui segment" style="background-color:azure">