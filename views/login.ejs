<!--View page for login credentials-->
<!-- header call from partials-->
<% include partials/header %>
<!--Displaying error message with orange ribbon label styling and information message with blue-->
<% if (messages.length > 0) { %>
    <div class="ui orange ribbon label">
        <%= messages.toString() %>
    </div>
<% } else { %>
    <div class="ui blue ribbon label">
        Please enter your credentials
    </div>
<% } %>
<h1>
    <%= title %>
</h1>
<!--Three column grid-->
<div class="ui three column middle aligned very relaxed stackable grid">
    <!--Column for login with registerd account-->
    <div class="column">
        <form method="POST" class="ui form">
            <div class="field">
                <label for="username">Username</label>
                <input type="email" id="username" name="username" placeholder="Username" required>
            </div>
            <div class="field">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required>
            </div>
            <button class="ui submit blue button">Login</button>
        </form>
    </div>
    <!--Divider for next column-->
    <div class="ui vertical divider">
        Or
    </div>
    <!--Sign in with Microsoft or Google-->
    <div class="center aligned column">
        <div class="ui circular segment">
            Sign In with your Google Account.<br /><br />
            <a href='/google'>
                <button class="ui black button">
                    Google
                </button>
            </a>
        </div>
        <div class="ui horizontal divider">
        </div>
        <div class="ui circular segment">
            Sign In with your Microsoft Account.<br /><br />
            <a href='/microsoft'>
                <button class="ui black button">
                    Microsoft
                </button>
            </a>
        </div>
    </div>
    <!--Vertical divider-->
    <div class="ui vertical divider">
        Or
    </div>
    <!--Column for registering for new user-->
    <div class="center aligned column">
        <div class="ui circular segment">
            Are you a New User? <br />
            <a href='/register'>
                <div class="ui big green button">
                    Register Now
                </div>
            </a>
        </div>
    </div>
</div>

<!--Footer call from partials-->
<% include partials/footer %>